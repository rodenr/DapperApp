<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for(@user, size: 300) %>
      </h1>
      <p class="name"> <%= @user.name %> </p>
    </section>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Berlin Wall (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
